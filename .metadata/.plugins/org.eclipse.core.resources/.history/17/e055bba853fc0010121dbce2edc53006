package com.example.demo.Intercommunication;


import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.example.demo.Dto.PagedResponse;
import com.example.demo.Dto.ProductDTO;

@FeignClient(name = "api-gateway", url = "http://localhost:3333")
public interface ProductClient {

    // ✅ get all products
    @GetMapping("/api/product")
    List<ProductDTO> getAllProduct();

    // ✅ search by category
    @GetMapping("/api/product/search/findByCategoryId")
    PagedResponse<ProductDTO> findByCategoryId(
            @RequestParam("id") Integer id,
            @RequestParam("page") int page,
            @RequestParam("size") int size
    );

    // ✅ search by name
    @GetMapping("/api/product/search/findByNameContainingIgnoreCase")
    PagedResponse<ProductDTO> findByName(
            @RequestParam("name") String name,
            @RequestParam("page") int page,
            @RequestParam("size") int size
    );
}

