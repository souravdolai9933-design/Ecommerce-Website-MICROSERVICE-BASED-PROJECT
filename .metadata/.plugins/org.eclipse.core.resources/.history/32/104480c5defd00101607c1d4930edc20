<!-- NAVBAR -->
<nav class="navbar navbar-dark bg-dark px-3">
    <button class="btn btn-outline-light" onclick="openMenu()">
        <i class="bi bi-list"></i>
    </button>

    <span class="navbar-brand mx-auto fw-bold">MyShop</span>

    <button class="btn btn-warning">
        <i class="bi bi-cart"></i> Cart
    </button>
</nav>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
    <h5 class="mb-3">Categories</h5>

    <a th:each="cat : ${allcategory}"
       th:text="${cat.name}"
       th:href="@{/user/getProduct(id=${cat.id})}">
    </a>
</div>

<div class="overlay" id="overlay" onclick="closeMenu()"></div>

<!-- PRODUCT DETAILS -->
<div class="container mt-5">
    <div class="row">

        <!-- IMAGE -->
        <div class="col-md-5 text-center">
            <img th:src="@{'http://localhost:8085/uploads/images/' + ${masterView.imgurl}}"
                 class="img-fluid product-img"
                 alt="Product Image">
        </div>

        <!-- DETAILS -->
        <div class="col-md-7">

            <h3 th:text="${masterView.title}" class="fw-bold"></h3>

            <h4 class="text-success mt-3">
                &#8377; <span th:text="${masterView.price}"></span>
            </h4>

            <!-- HIGHLIGHTS -->
            <div class="mt-4">
                <h6 class="fw-bold">Highlights</h6>
                <ul class="mt-2">
                    <li th:each="h : ${highlights}"
                        th:text="${h.trim()}">
                    </li>
                </ul>
            </div>

            <!-- STOCK -->
            <p class="mt-3">
                <strong>Status:</strong>
                <span th:text="${masterView.unitInStocks == 0 ? 'Out of Stock' : 'In Stock'}"
                      th:classappend="${masterView.unitInStocks == 0 ? 'text-danger' : 'text-success'}">
                </span>
            </p>

            <!-- ADD TO CART -->
            <div class="mt-4">
                <button class="btn btn-warning btn-lg w-50"
                        th:disabled="${masterView.unitInStocks == 0}">
                    <i class="bi bi-cart-plus"></i>
                    <span th:text="${masterView.unitInStocks == 0 ? 'Out of Stock' : 'Add to Cart'}"></span>
                </button>
            </div>

        </div>
    </div>
</div>

<!-- SCRIPT -->
<script>
    function openMenu() {
        document.getElementById("sidebar").classList.add("open");
        document.getElementById("overlay").classList.add("show");
    }

    function closeMenu() {
        document.getElementById("sidebar").classList.remove("open");
        document.getElementById("overlay").classList.remove("show");
    }
</script>

