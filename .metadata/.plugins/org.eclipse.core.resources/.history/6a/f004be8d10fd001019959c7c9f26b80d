<!-- ================= SIDEBAR ================= -->
<div class="sidebar" id="sidebar">
    <h5 class="mb-3">Categories</h5>

    <div th:if="${#lists.isEmpty(allcategory)}">
        <p>No categories found</p>
    </div>

    <a class="d-block py-2 text-decoration-none text-primary"
       th:each="cat : ${allcategory}"
       th:href="@{/user/getProduct(id=${cat.id})}"
       th:text="${cat.name}">
    </a>
</div>

<div class="overlay" id="overlay" onclick="closeMenu()"></div>

<!-- ================= PRODUCTS ================= -->
<div class="container mt-4">
    <h4 class="mb-3">Products</h4>

    <div th:if="${#lists.isEmpty(products)}" class="alert alert-warning">
        No products available
    </div>

    <div class="row g-4">
        <div class="col-md-3"
             th:each="product : ${products}">
            <div class="card product-card shadow-sm">
                <img th:src="@{/images/{img}(img=${product.imgurl})}" class="card-img-top">

                <div class="card-body text-center">
                    <h6 th:text="${product.title}"></h6>
                    <p class="text-success fw-bold">
                        â‚¹ <span th:text="${product.price}"></span>
