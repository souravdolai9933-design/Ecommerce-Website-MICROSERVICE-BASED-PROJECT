package com.example.demo.Controller;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;          // âœ… CORRECT Model
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.example.demo.Dto.ProductCategoryDTO;
import com.example.demo.Dto.ProductDTO;
import com.example.demo.Service.UserService;


@Controller
@RequestMapping("/user")
public class UserController {
	
	@Autowired
	private UserService service;
	
	@GetMapping("/all")
	public String getAll(
			@RequestParam(defaultValue = "0")int page,
			@RequestParam(defaultValue ="10")int size,Model model){
		
		 List<ProductDTO> dtolist = service.getAllProduct(page, size);
		 
		 List<ProductCategoryDTO> Categorylist = service.getAllCategory();
		model.addAttribute("allcategory",Categorylist);
		 
		 model.addAttribute("products",dtolist);
		 
		 
		 return "user/userHome";
		  
	}
	
	@GetMapping("/getProduct")
     public String getProductBythroughTheCategry(Long id,@RequestParam(defaultValue = "0")int page,
 			@RequestParam(defaultValue ="10")int size,Model model) {
		
		List<ProductDTO> p1 = service.getProductByCategory(id, page,size);
		
		model.addAttribute("products",p1);
		
		return "user/userHome";
 }
	
	
}
